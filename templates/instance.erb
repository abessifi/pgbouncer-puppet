# 
PGB_NUMBER[<%= @index -%>]=<%= @enable ? @index : '-1' -%>                 # index for the other values; negative disables the pgbouncer
PGB_NAME[<%= @index -%>]="<%= @name -%>"               # short name printed on startup / stop
PGB_USER[<%= @index -%>]="<%= @user ||= 'postgres' -%>"          # user to run as
PGB_CONFILE[<%= @index -%>]="<%= @confile ||= '' -%>"               # configuration to this instance of pgbouncer (absolute path)
PGB_OPTIONS[<%= @index -%>]="<%= @options ||= '' -%>"               # pgbouncer options
PGB_PREFIXCMD[<%= @index -%>]="<%= @prefix_cmd ||= '' -%>"             # prefix command, i.e. nice, linux32, dchroot
PGB_PORT[<%= @index -%>]="<%= @port ||= '' -%>"             # where to pgbouncer will listen (for reload command)
